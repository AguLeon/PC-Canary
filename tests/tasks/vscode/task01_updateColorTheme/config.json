{
    "task_id": "01",
    "task_name": "update_color_theme",
    "description": "Change the VS Code color theme",

    "application_info": {
        "name": "vscode",
        "executable_path": "/workspace/PC-Canary/apps/vscode/scripts/code.sh",
        "args": ["--no-sandbox", "--user-data-dir=/workspace/.mcpworld/vscode/vscode_user_data_dir"]
    },

    "task_parameters": {
        "theme": "Default Light+"
    },

    "instruction_template": "Change the VS Code color theme to ${theme}",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.js" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120,
        "evaluator_type": "IpcInjector",
        "evaluate_on_completion": true
    },
    "total_key_steps": 1,
    "preconditions": {
        "vscode_running": true
    },
    "events": {
        "evaluate_on_completion": {
            "description": "Verify that the color theme matches the expected value when the task ends",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Color theme successfully updated"
        }
    },
    "mcp_servers": [
        {
            "command": "mcp-proxy",
            "args": ["http://127.0.0.1:6010/sse"]
        }
    ],
    "context_data": [
        {
            "from": "tests/context_data/vscode/user_data",
            "to": "/workspace/.mcpworld/vscode/vscode_user_data_dir"
        },
        {
            "from": "tests/context_data/vscode/extensions",
            "to": "/workspace/.mcpworld/vscode/.vscode/"
        },
        {
            "from": "tests/context_data/vscode/C-Plus-Plus",
            "to": "/workspace/.mcpworld/vscode/C-Plus-Plus"
        }
    ]
}
