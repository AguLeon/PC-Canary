            "key_step_name": "File folded when the task completes"
        },
        "open_file": {
            "description": "Detect that the expected file was opened",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Open the target file in VS Code"
        }
    },
    "mcp_servers": [
        {
            "command": "mcp-proxy",
            "args": ["http://127.0.0.1:6010/sse"]
        }
    ],
    "context_data": [
        {
            "from": "tests/context_data/vscode/user_data",
