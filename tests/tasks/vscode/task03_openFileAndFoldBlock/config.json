{
    "task_id": "03",
    "task_name": "open_file_and_fold_block",
    "description": "Open a file in the VS Code workspace and fold every code block",

    "application_info": {
        "name": "vscode",
        "executable_path": "/workspace/PC-Canary/apps/vscode/scripts/code.sh",
        "args": [
