{
    "task_id": "10",
    "task_name": "installPlugin",
    "description": "Search for a specific VS Code extension and install it",
    "application_info": {
        "name": "vscode",
        "executable_path": "/workspace/PC-Canary/apps/vscode/scripts/code.sh",
        "args": [
            "--no-sandbox",
            "--user-data-dir=/workspace/.mcpworld/vscode/vscode_user_data_dir",
            "/workspace/.mcpworld/vscode/C-Plus-Plus"
        ]
    },
    "task_parameters": {
        "plugin_name": "Even Better TOML"
    },
    "instruction_template": "Search within VS Code for the ${plugin_name} extension and install it. Only work inside the sandboxed VS Code workspace under /workspace/.mcpworld/vscode and do not touch other directories. The workspace root is `/workspace/.mcpworld/vscode/C-Plus-Plus`.",
    "evaluation_setup": {
        "scripts": [
            {
                "role": "hook",
                "path": "hooker.js"
            },
            {
                "role": "handler",
                "path": "handler.py"
            }
        ],
        "timeout": 120,
        "evaluator_type": "IpcInjector",
        "evaluate_on_completion": true
    },
    "total_key_steps": 1,
    "preconditions": {
        "vscode_running": true
    },
    "events": {
        "evaluate_on_completion": {
            "description": "Check at completion whether the extension is installed",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Extension installed"
        }
    },
    "mcp_servers": [
        {
            "command": "mcp-proxy",
            "args": [
                "http://127.0.0.1:6010/sse"
            ]
        }
    ],
    "context_data": [
        {
            "from": "tests/context_data/vscode/user_data",
            "to": "/workspace/.mcpworld/vscode/vscode_user_data_dir"
        },
        {
            "from": "tests/context_data/vscode/extensions",
            "to": "/workspace/.mcpworld/vscode/.vscode/"
        },
        {
            "from": "tests/context_data/vscode/C-Plus-Plus",
            "to": "/workspace/.mcpworld/vscode/C-Plus-Plus"
        }
    ]
}
