{
    "task_id": "18",
    "task_name": "configure_plugin",
    "description": "Install a VS Code extension and adjust its configuration",

    "application_info": {
        "name": "vscode",
        "executable_path": "/workspace/PC-Canary/apps/vscode/scripts/code.sh",
        "args": [
            "--no-sandbox",
            "--user-data-dir=/workspace/.mcpworld/vscode/vscode_user_data_dir"
        ]
    },

    "task_parameters": {
        "plugin_name": "TODO Highlight",
        "instruction": "Configure the extension so that highlighting is case-insensitive",
        "value": false
    },

    "instruction_template": "Install the ${plugin_name} extension in VS Code and ${instruction}",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook",    "path": "hooker.js" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120,
        "evaluator_type": "IpcInjector",
        "evaluate_on_completion": true
    },
    "total_key_steps": 2,
    "preconditions": {
        "vscode_running": true
    },
    "events": {
        "evaluate_on_completion": {
            "description": "Check that the extension is installed and configured correctly",
            "is_key_step": true,
            "key_step_index": 2,
            "key_step_name": "Extension configured"
        },
        "plugin_installed": {
            "description": "Confirm the extension appears in the installed list",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Extension installed"
        }
    },
    "mcp_servers": [
        {
            "command": "mcp-proxy",
            "args": ["http://127.0.0.1:6010/sse"]
        }
    ],
    "context_data": [
        {
            "from": "tests/context_data/vscode/user_data",
            "to": "/workspace/.mcpworld/vscode/vscode_user_data_dir"
        },
        {
            "from": "tests/context_data/vscode/extensions",
            "to": "/workspace/.mcpworld/vscode/.vscode/"
        },
        {
            "from": "tests/context_data/vscode/C-Plus-Plus",
            "to": "/workspace/.mcpworld/vscode/C-Plus-Plus"
        }
    ]
}
