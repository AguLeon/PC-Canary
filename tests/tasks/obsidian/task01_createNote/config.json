{
    "task_id": "01",
    "task_name": "create_note",
    "description": "Create a new note in Obsidian with a specific name",
    "application_info": {
        "name": "obsidian",
        "executable_path": "/usr/local/bin/obsidian",
        "args": [
            "obsidian://open?vault=vault"
        ],
        "cwd": null
    },
    "task_parameters": {
        "note_name": "TestNote.md",
        "vault_path": "/workspace/.mcpworld/obsidian/vault"
    },
    "instruction_template": "Create a new note named '${note_name}' in the Obsidian vault at /workspace/.mcpworld/obsidian/vault. Ensure the note exists with any content you deem appropriate, and confirm it was created before finishing.",
    "evaluation_setup": {
        "scripts": [
            {
                "role": "hook",
                "path": "handler.py"
            },
            {
                "role": "handler",
                "path": "handler.py"
            }
        ],
        "timeout": 600,
        "evaluator_type": "StateInspector",
        "evaluate_on_completion": true
    },
    "total_key_steps": 1,
    "preconditions": {
        "obsidian_running": true,
        "vault_initialized": true
    },
    "events": {
        "note_created": {
            "description": "Note was successfully created in the vault",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Note created in vault"
        }
    },
    "mcp_servers": [
        {
            "command": "uvx",
            "args": [
                "mcp-obsidian"
            ],
            "env": {
                "OBSIDIAN_API_KEY": "1234",
                "OBSIDIAN_HOST": "http://127.0.0.1",
                "OBSIDIAN_PORT": "27123"
            }
        }
    ],
    "context_data": [
        {
            "from": "tests/context_data/obsidian/sample-vault",
            "to": "/workspace/.mcpworld/obsidian/vault"
        }
    ]
}
