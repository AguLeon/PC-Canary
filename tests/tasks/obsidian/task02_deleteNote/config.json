{
    "task_id": "02",
    "task_name": "delete_note",
    "description": "Delete a specific pre-existing note from the Obsidian vault",

    "application_info": {
        "name": "obsidian",
        "executable_path": "/usr/local/bin/obsidian",
        "args": ["obsidian://open?vault=vault"],
        "cwd": null
    },

    "task_parameters": {
        "note_relative_path": "Archive/ArchiveMe.md",
        "vault_path": "/workspace/.mcpworld/obsidian/vault"
    },

    "instruction_template": "Delete the note located at '${note_relative_path}' inside the Obsidian vault at /workspace/.mcpworld/obsidian/vault. Confirm it is removed without deleting any other files.",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook", "path": "handler.py" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120,
        "evaluator_type": "StateInspector",
        "evaluate_on_completion": true
    },

    "total_key_steps": 1,

    "preconditions": {
        "obsidian_running": true,
        "vault_initialized": true
    },

    "events": {
        "note_deleted": {
            "description": "The specified note was removed from the vault",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Note deleted"
        }
    },

    "mcp_servers": [
        {
            "command": "uvx",
            "args": ["mcp-obsidian"],
            "env": {
                "OBSIDIAN_API_KEY": "1234",
                "OBSIDIAN_HOST": "http://127.0.0.1",
                "OBSIDIAN_PORT": "27123"
            }
        }
    ],

    "context_data": [
        {
            "from": "tests/context_data/obsidian/sample-vault",
            "to": "/workspace/.mcpworld/obsidian/vault"
        }
    ]
}
