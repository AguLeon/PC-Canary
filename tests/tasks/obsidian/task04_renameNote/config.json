{
    "task_id": "04",
    "task_name": "rename_note",
    "description": "Rename an existing note to a new filename",

    "application_info": {
        "name": "obsidian",
        "executable_path": "/usr/local/bin/obsidian",
        "args": ["obsidian://open?vault=vault"],
        "cwd": null
    },

    "task_parameters": {
        "source_note": "MeetingNotes.md",
        "target_note": "ClientMeeting.md",
        "vault_path": "/workspace/.mcpworld/obsidian/vault",
        "content_snippet": "Participants: Alice, Bob, Charlie"
    },

    "instruction_template": "Rename the note '${source_note}' inside /workspace/.mcpworld/obsidian/vault to '${target_note}'. Ensure the new note keeps the original contents.",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook", "path": "handler.py" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 120,
        "evaluator_type": "StateInspector",
        "evaluate_on_completion": true
    },

    "total_key_steps": 1,

    "preconditions": {
        "obsidian_running": true,
        "vault_initialized": true
    },

    "events": {
        "note_renamed": {
            "description": "Source note replaced by the new filename",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Note renamed"
        }
    },

    "mcp_servers": [
        {
            "command": "uvx",
            "args": ["mcp-obsidian"],
            "env": {
                "OBSIDIAN_API_KEY": "1234",
                "OBSIDIAN_HOST": "http://127.0.0.1",
                "OBSIDIAN_PORT": "27123"
            }
        }
    ],

    "context_data": [
        {
            "from": "tests/context_data/obsidian/sample-vault",
            "to": "/workspace/.mcpworld/obsidian/vault"
        }
    ]
}
