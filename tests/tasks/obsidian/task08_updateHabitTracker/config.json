{
    "task_id": "08",
    "task_name": "update_habit_tracker",
    "description": "Update the daily habit tracker by searching for the note and patching a specific line",

    "application_info": {
        "name": "obsidian",
        "executable_path": "/usr/local/bin/obsidian",
        "args": ["obsidian://open?vault=vault"],
        "cwd": null
    },

    "task_parameters": {
        "note_relative_path": "HabitTracker.md",
        "vault_path": "/workspace/.mcpworld/obsidian/vault",
        "original_line": "- Meditation: 0/7",
        "updated_line": "- Meditation: 1/7"
    },

    "instruction_template": "Locate '${note_relative_path}' (use a search tool if needed), confirm the current habit counts, and update the meditation line from 0/7 to 1/7. Leave all other habits untouched and keep the formatting the same.",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook", "path": "handler.py" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 150,
        "evaluator_type": "StateInspector",
        "evaluate_on_completion": true
    },

    "total_key_steps": 1,

    "preconditions": {
        "obsidian_running": true,
        "vault_initialized": true
    },

    "events": {
        "habit_tracker_updated": {
            "description": "Meditation line updated while other entries remain",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Habit tracker updated"
        }
    },

    "mcp_servers": [
        {
            "command": "uvx",
            "args": ["mcp-obsidian"],
            "env": {
                "OBSIDIAN_API_KEY": "1234",
                "OBSIDIAN_HOST": "http://127.0.0.1",
                "OBSIDIAN_PORT": "27123"
            }
        }
    ],

    "context_data": [
        {
            "from": "tests/context_data/obsidian/sample-vault",
            "to": "/workspace/.mcpworld/obsidian/vault"
        }
    ]
}
