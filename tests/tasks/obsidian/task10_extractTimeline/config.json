{
    "task_id": "10",
    "task_name": "extract_timeline",
    "description": "Extract the Upcoming Milestones section into its own note",

    "application_info": {
        "name": "obsidian",
        "executable_path": "/usr/local/bin/obsidian",
        "args": ["obsidian://open?vault=vault"],
        "cwd": null
    },

    "task_parameters": {
        "source_note": "Projects/ProjectPlan.md",
        "target_note": "Projects/Timeline.md",
        "vault_path": "/workspace/.mcpworld/obsidian/vault",
        "section_heading": "## Upcoming Milestones"
    },

    "instruction_template": "Inspect '${source_note}' to locate the '${section_heading}' section, then create a new note at '${target_note}' that contains only that section and its bullet list. Keep the section in the original file as well.",

    "evaluation_setup": {
        "scripts": [
            { "role": "hook", "path": "handler.py" },
            { "role": "handler", "path": "handler.py" }
        ],
        "timeout": 180,
        "evaluator_type": "StateInspector",
        "evaluate_on_completion": true
    },

    "total_key_steps": 1,

    "preconditions": {
        "obsidian_running": true,
        "vault_initialized": true
    },

    "events": {
        "timeline_created": {
            "description": "Timeline note created with copied section",
            "is_key_step": true,
            "key_step_index": 1,
            "key_step_name": "Timeline extracted"
        }
    },

    "mcp_servers": [
        {
            "command": "uvx",
            "args": ["mcp-obsidian"],
            "env": {
                "OBSIDIAN_API_KEY": "1234",
                "OBSIDIAN_HOST": "http://127.0.0.1",
                "OBSIDIAN_PORT": "27123"
            }
        }
    ],

    "context_data": [
        {
            "from": "tests/context_data/obsidian/sample-vault",
            "to": "/workspace/.mcpworld/obsidian/vault"
        }
    ]
}
