{
    "name": "benchmark",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "HTTP_PROXY": "$http_proxy",
            "HTTPS_PROXY": "$http_proxy"
        }
    },
    "workspaceFolder": "/workspace", // 容器中的工作目录
    "mounts": [ // 绑定当前项目到容器内
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    // "postCreateCommand": "bash ./.devcontainer/postCreateCommand.sh", // 容器初始化完成后执行的命令（可选）
    "image": "benchmark:latest",
    "containerEnv": {
        // "DISPLAY": "${localEnv:DISPLAY}",
        // "HTTP_PROXY": "${localEnv:http_proxy}",
        // "HTTPS_PROXY": "${localEnv:https_proxy}",
        "DISPLAY": ":13",
        "HTTP_PROXY": "http://127.0.0.1:9890",
        "HTTPS_PROXY": "http://127.0.0.1:9890"
    },
    "runArgs": [ 
        "--privileged",
        "--gpus",
        "all",
        // "--ipc",
        "--net",
        "host",
        "--shm-size",
        "4g",
        "--ulimit",
        "memlock=-1",
        "--device=/dev/kvm",
        "-v",
        "/tmp/.X11-unix:/tmp/.X11-unix",
        "-v",
        "/data/yyh/.Xauthority:/home/agent/.Xauthority"
    ]
}